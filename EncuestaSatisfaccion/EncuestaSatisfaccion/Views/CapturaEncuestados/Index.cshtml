<style>

    .file-drop-zone {
        height: 45vh !important;
        overflow: auto;
    }

    .kv-file-remove {
        visibility: hidden;
    }

    .card {
        -webkit-box-shadow: none !important;
        box-shadow: none !important;
        border: 0;
        border: none !important;
    }
