            </div>*@
        </div>
            <div class="row" style="margin-top:10px">
                <div class="col-2">
                    <label class="form-control-label">
                        Fecha Alta Inicial
                    </label>
                    <input type="date" class="form-control" id="Ffalta" />
                </div>
                <div class="col-2">
                    <label class="form-control-label">
                        Fecha Alta Final
                    </label>
                    <input type="date" class="form-control" id="Ffaltaf" />
                </div>
                <div class="col-2">
                    <label class="form-control-label">
                        Fecha Contestado Inicial
                    </label>
                    <input type="date" class="form-control" id="Ffcontestado" />
                </div>
                <div class="col-2">
                    <label class="form-control-label">
                        Fecha Contestado Final
                    </label>
                    <input type="date" class="form-control" id="Ffcontestadof" />
                </div>
                <div class="col-1">
                    <button class="btn btn-primary" style="margin-top: 10px;" onclick="gdata();"> <span><i class="nav-icon fas fa-search"></i> Buscar</span></button>
                </div>
                <div class="col-1">
                    <button class="btn btn-primary" style="margin-top: 10px;" onclick="reprrEx()" tabindex="0" aria-controls="" type="button" title="Exportar a excel"><span><i class="nav-icon fas fa-file-excel"></i> Excel</span></button>

                </div>
            </div>
            <div class="row" style="margin-top:20px;">
                <div class="col-12" style="padding-top:10px">
                    <table id="TablaRespuestas" class="table table-striped" style="width:100%">
                        <thead class="LTT12B">
                            <tr>
                                <th>Id</th>
                                <th>Nombre Encuestado</th>
                                <th>Contestado</th>
                                <th>Puesto</th>
                                <th>Fecha alta</th>
                                <th>Fecha contestado</th>
                                <th>Estatus del candidato</th>
                                <th> Reclutador o primer contacto</th>
